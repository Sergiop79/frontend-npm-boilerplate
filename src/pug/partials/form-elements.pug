h1#form-elements Form Elements

p The Fieldset

fieldset
  legend Legend
  p The form:
  
  form
    p
      label(for="text_field") Text Field:
      input(type="text" id="text_field")
    
    p
      label(for="text_field_disabled") Disabled Text Field:
      input(type="text" id="text_field_disabled" disabled="" value="I'm disabled")
    
    
    p
      label(for="text_field_readonly") Readonly Text Field:
      input(type="text" id="text_field_readonly" readonly="" value="I'm readonly")

    p
      label(for="text_area") Text Area:
      textarea#text_area

    p
      label(for="text_area_readonly") Readonly Text Area:
      textarea(id="text_area_readonly" readonly="") I'm readonly

    p
      label(for="select_element") Select Element:
      select#select_element
        optgroup(label="Option Group 1")
          option(value="1") Option 1
          option(value="2") Option 2
        optgroup(label="Option Group 2")
          option(value="1") Option 1
          option(value="2") Option 2
          option(value="3" disabled="") Disabled
          
    p
      label(for="select_element_disabled") Disabled Select Element:
      select#select_element_disabled(disabled="")
        option(value="1") Unselectable Option
        option(value="2") This option should not even be seen
    
    p
      | Radio Buttons:
      br

      input.radio(type='radio', name='radio_button', value='radio_1', id='radio_1' checked)
      label(for="radio_1") Radio 1
      
      input.radio(type='radio', name='radio_button', value='radio_2', id='radio_2')
      label(for="radio_2") Radio 2
      
      input.radio(type='radio', name='radio_button', value='radio_3', id='radio_3')
      label(for="radio_3") Radio 3
      
      input.radio(type='radio', name='radio_button', value='radio_4', id='radio_4')
      label(for="radio_4") Radio 4
      
      input.radio(type='radio', name='radio_button', value='radio_5', id='radio_5', disabled)
      label(for="radio_5") Radio disabled

      

    
    p
      | Checkboxes:
      br
      input.checkbox(type='checkbox', name='checkboxes', value='check_1', id='check_1', checked)
      label(for='check_1') Checkbox 1

      input.checkbox(type='checkbox', name='checkboxes', value='check_2', id='check_2')
      label(for='check_2') Checkbox 2

      input.checkbox(type='checkbox', name='checkboxes', value='check_3', id='check_3')
      label(for='check_3') Checkbox 3

      input.checkbox(type='checkbox', name='checkboxes', value='check_4', disabled)
      label(for='check_4') Checkbox disabled

    p
      label(for='password') Password:
      input#password.password(type='password')
      
    p
      input#file(type='file', name="file")
      label(for='file')
        svg(xmlns='http://www.w3.org/2000/svg', width='20', height='17', viewbox='0 0 20 17')
          path(d='M10 0l-5.2 4.9h3.3v5.1h3.8v-5.1h3.3l-5.2-4.9zm9.3 11.5l-3.2-2.1h-2l3.4 2.6h-3.5c-.1 0-.2.1-.2.1l-.8 2.3h-6l-.8-2.2c-.1-.1-.1-.2-.2-.2h-3.6l3.4-2.6h-2l-3.2 2.1c-.4.3-.7 1-.6 1.5l.6 3.1c.1.5.7.9 1.2.9h16.3c.6 0 1.1-.4 1.3-.9l.6-3.1c.1-.5-.2-1.2-.7-1.5z')
        span Choose a file

      
    h3 HTML5-specific Form Elements
    
    p
      label(for='email') Email:
      input#email(type='email')
      
    p
      label(for='url') URL:
      input#url(type='url')
            
    p
      label(for='tel') Telephone:
      input#tel(type='tel')
      
    p
      label(for='number') Number:
      input#number(type='number', min='0', max='10', step='1', value='5')
      
    p
      label(for='search') Search:
      input#search(type='search')
      
    p
      label(for='date') Date:
      input#date(type='date')
      
    p
      label(for='time') Time:
      input#time(type='time')
      
    p
      label(for='color') Color:
      input#color(type='color')

    p
      label(for='datalist') Datalist:
      input#datalist(list='browsers', name='browser', type='datalist')
      datalist#browsers
        option(value='Internet Explorer')
        option(value='Firefox')
        option(value='Chrome')
        option(value='Opera')
        option(value='Safari')
        
    p
      label(for='range') Range:
      input#range(type='range', name='points', min='1', max='10')

    p
      label(for='output') Output:
      output#output(name='result') 42
      
    p
      label(for='progress') Progress:
      progress#progress(value='65', max='100')
      
    p
      label(for='meter') Meter:
      meter#meter(min='200', max='500', value='350') 350 degrees
      
    p
      button.button Button Element
      input.button(type='reset', value='Clear')
      input.button(type='submit', value='Submit')
