{
  "name": "frontend-npm-boilerplate",
  "version": "0.0.1",
  "description": "basic frontend project boilerplate with automated npm scripts",
  "scripts": {
    "build:css": "postcss -c config-postcss.js --no-map.inline",
    "build:pug": "pug src/pug/*.pug --out dist -P",
    "build:js": "babel src/js --out-dir dist/js",
    "serve": "browser-sync start --server dist --files dist",
    "watch:css": "onchange 'src/css/**/*.css' -- npm run build:css",
    "watch:pug": "onchange 'src/pug/**/*.pug' -- npm run build:pug",
    "watch:js": "onchange 'src/js/**/*.js' -- npm run build:js",
    "watch:images": "onchange 'src/images/**/*' -- npm run images",
    "dev": "parallelshell 'npm run watch:css' 'npm run watch:pug' 'npm run watch:js' 'npm run watch:images' 'npm run serve'",
    "images": "imagemin src/images/**/* -o dist/images",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "build": "npm run build:pug && npm run build:js && npm run build:css && npm run images"
  },
  "keywords": [
    "boilerplate",
    "frontend",
    "npm",
    "scripts"
  ],
  "author": "Sergio Pe√±a <sergiop79@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "babel-cli": "^6.10.1",
    "babel-preset-es2015": "^6.9.0",
    "browser-sync": "^2.13.0",
    "imagemin-cli": "^3.0.0",
    "onchange": "^2.5.0",
    "parallelshell": "^2.0.0",
    "postcss": "^5.2.8",
    "postcss-browser-reporter": "^0.5.0",
    "postcss-cli": "^2.6.0",
    "postcss-cssnext": "^2.9.0",
    "postcss-import": "^9.0.0",
    "postcss-math": "0.0.5",
    "postcss-reporter": "^3.0.0",
    "postcss-scss": "^0.3.1",
    "postcss-url": "^5.1.2",
    "precss": "^1.4.0",
    "pug-cli": "^1.0.0-alpha6"
  }
}
